@model MSE.Entity.Entities.Concrete.WorkStationPersonnel

@{
    ViewData["Title"] = "GetById";
}

<h2>Maintenance Personnel - Work Station Information</h2>


@using (Html.BeginForm("Update", "PersonnelStation", FormMethod.Post))
{
    <div>
        @Html.HiddenFor(x=>x.Id)
        <div>
            <label>Maintenance Personnel </label><br />
            @Html.DropDownListFor(q => q.MaintenancePersonnelId, (List<SelectListItem>)ViewBag.personnel, "Please select: ", new { @class = "form-control" })
        </div>

        <div>
            <label>Work Station</label><br />
            @Html.DropDownListFor(q => q.WorkStationId, (List<SelectListItem>)ViewBag.workStation, "Please select: ", new { @class = "form-control" })
        </div>

        <div style="margin-top:15px;">
            <button class="btn btn-primary">Add</button>
        </div>
    </div>
}
