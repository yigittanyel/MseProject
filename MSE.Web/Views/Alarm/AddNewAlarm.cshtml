@model MSE.Entity.Entities.Concrete.Alarm

@{
    ViewData["Title"] = "AddNewAlarm";
}

<h2>Add New Alarm</h2>

@using (Html.BeginForm("AddNewAlarm", "Alarm", FormMethod.Post))
{
    <div>
        <div>
            <label>Work Station</label><br />
            @Html.DropDownListFor(q => q.WorkStationId, (List<SelectListItem>)ViewBag.workStation, "Please select: ", new { @class = "form-control" })
        </div>
        <div class="padding:10px;">
            <label>Max Temperature: </label><br />
            @Html.TextBoxFor(q => q.MaxTemperature, new { @class = "form-control" })
        </div>
        <div>
            <label>Min Temperature: </label><br />
            @Html.TextBoxFor(q => q.MinTemperature, new { @class = "form-control" })
        </div>
        <div>
            <label>Max Pressure: </label><br />
            @Html.TextBoxFor(q => q.MaxPressure, new { @class = "form-control" })
        </div>
        <div>
            <label>Min Pressure</label><br />
            @Html.TextBoxFor(q => q.MinPressure, new { @class = "form-control" })
        </div>

        <div style="margin-top:15px;">
            <button class="btn btn-primary">Add</button>
        </div>
    </div>
}




